<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">

                <h3 class="mb-3">
                    <%= listing.title %>
                </h3>

                <div class="card listing-card ">
                    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listings_image">
                    <div class="card-body mt-3 mb-3">
                        <p class="card-text">Owned By : <span class="badge rounded-pill text-bg-info">
                                <%= listing.owner.username %>
                            </span>
                        </p>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        <p class="card-text">
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text">
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                    </div>
                </div>
                
                <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
                    <div class="mb-4 d-flex">
                        <div>
                            <form method="GET" action="/listings/<%=listing._id%>/edit">
                                <button class="btn btn-dark edit-btn">Edit</button>
                            </form>
                        </div>
                        <div>
                            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                                <button class="btn btn-dark del-btn">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
            <hr>

            <div class=" mt-4 mb-4 col-8 offset-2">

                <% if(currUser) { %>
                    <h4 class="mb-3">Leave a Review</h4>
                    <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                        </div>
                        <div class="mb-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Enter a comment</div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-dark add-btn">Submit</button>
                        </div>
                    </form>
                    <hr>
                    <% } %>

                        <h3>All Reviews</h3>

                        <div class="row mt-3">
                            <% for(let review of listing.reviews) {%>
                                <div class="col-lg-6 col-md-12 col-sm-12 mb-3">
                                    <div class="card p-3">
                                        <div class="card-body">
                                            <h5 class="card-title"><i class="fa-solid fa-user"></i> &nbsp;
                                                @<%= review.author.username %>
                                            </h5>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>
                                            <p class="card-text">
                                                <%= review.rating %>Stars
                                            </p>

                                            <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                                <form method="POST"
                                                    action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                                    <button class="btn btn-dark del-btn">Delete</button>
                                                </form>
                                                <% } %>

                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
            </div>
        </div>
    </body>